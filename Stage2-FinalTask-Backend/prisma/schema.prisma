// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  role     String   // "ADMIN" | "USER"
  points   Int      @default(0)
  profileImage String?   // foto profil user/admin

  // Relasi
  orders   Order[]
  products Product[]        // produk yang dibuat admin
  sentTransactions     PointTransaction[] @relation("SentTransactions")
  receivedTransactions PointTransaction[] @relation("ReceivedTransactions")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Int
  stock       Int
  image       String?   // foto produk

  createdBy   User     @relation(fields: [createdById], references: [id])
  createdById Int
  createdAt   DateTime @default(now())
  orders      Order[]
  deletedAt   DateTime?  
}

model Order {
  id         Int      @id @default(autoincrement())
  userId     Int
  productId  Int
  quantity   Int      @default(1)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user        User              @relation(fields: [userId], references: [id])
  product     Product           @relation(fields: [productId], references: [id])
  transaction PointTransaction?
}

model PointTransaction {
  id        Int      @id @default(autoincrement())
  type      String   // "TRANSFER"
  amount    Int
  createdAt DateTime @default(now())

  // transfer antar user
  sender    User?    @relation("SentTransactions", fields: [senderId], references: [id])
  senderId  Int?
  receiver  User?    @relation("ReceivedTransactions", fields: [receiverId], references: [id])
  receiverId Int?

  // transaksi order
  order     Order?   @relation(fields: [orderId], references: [id])
  orderId   Int?     @unique
}
